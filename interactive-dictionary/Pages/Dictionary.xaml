<Page x:Class="Exersare.Pages.Dictionary"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exersare.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Dictionary">

    <Grid Background="#0d1e25">
        <StackPanel x:Name="adminMode" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Visibility="Collapsed">
            <TextBlock Foreground="White" FontSize="20" Margin="0 0 20 0">Admin Mode: </TextBlock>
            <TextBlock Foreground="LightGreen" FontSize="20" FontWeight="Bold" Margin="0 0 20 0">ON</TextBlock>
        </StackPanel>
        <Button Content="←"  
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Width="100" Height="50" FontSize="40" FontWeight="Bold" Foreground="White" Background="#0d1e25" BorderBrush="#0d1e25" Click="BackButton_Click"/>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="200">
            <TextBlock Foreground="White" FontSize="30" FontWeight="Bold" Margin="10"> Search word: </TextBlock>
            <TextBox Foreground="Black" FontSize="30" FontWeight="Bold" Width="500"> </TextBox>
        </StackPanel>
    </Grid>
</Page>
